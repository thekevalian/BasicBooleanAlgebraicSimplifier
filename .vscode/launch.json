{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/BLS", // Update with your program's executable path
            "args": [], // Command-line arguments (leave empty if none)
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Task to run before launching (defined below)
            "miDebuggerPath": "gdb",
            "linux": {
                "preLaunchTask": "build",
                "postDebugTask": "clean"
            },
        }
    ],
    "compounds": []
}

